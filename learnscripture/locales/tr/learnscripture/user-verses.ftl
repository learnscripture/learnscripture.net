### User's verse list page.

# Page title
user-verses-page-title = İlerleme istatistikleri

# Label for box where user can enter search terms for filtering list of verses
user-verses-search-label = Ara:

# Caption for button that will do the search
user-verses-search-button = Bul

# Search query field for searching through user's verses
user-verses-filter-query = Arama
                         .placeholder = Kutsal Kitap ayeti, örn. Yar 1:1


# Caption for the 'text type' filter (options are 'bible' or 'catechism')
user-verses-filter-text-type = Tür


# Caption for the sorting options
user-verses-order = Sıralama

# Caption for showing memorized items sorted by the 'weakest' memory first
user-verses-order-weakest-first = Önce en az bilinen

# Caption for showing memorized items sorted by the 'strongest' memory first
user-verses-order-strongest-first = Önce en iyi bilinen

# Caption for showing memorized items sorted according to the natural text order (e.g. Bible order)
user-verses-order-text = Alfabetik sıralama

# Shown in verse list when the user hasn't started learning any verses, or none that match the search terms
user-verses-no-verses = Ayet bulunamadı

# Shown in the list when the user hasn't started learning any catechism questions, or none that match the search terms
user-verses-no-catechism-questions = İlmihal sorusu bulunamadı.

# Heading in table for verse references
user-verses-verse-reference-heading = Ayet

# Heading in table for catechism question
user-verses-question-heading = Soru

# Heading in table for Bible version
user-verses-version-heading = Çeviri

# Heading in table for Catechism name
user-verses-catechism-heading = İlmihal

# Heading in table for column showing the level/strength to which a verse has been learnt
user-verses-strength-heading = Ayet bilinirliği

# Button for reviewing a verse (or catechism question).
# $item_name is usually a verse reference (e.g. "Genesis 1:1")
user-verses-review-item-button = { $item_name } tekrarla

# Button for practising a verse (or catechism question)
# $item_name is usually a verse reference (e.g. "Genesis 1:1")
user-verses-practise-item-button = { $item_name } çalış

# Button for reviewing a section of a passage
user-verses-review-section-button = { $section_reference } kısmı tekrarla

# Button for practising a section of a passage
user-verses-practise-section-button = { $section_reference } kısmı çalış

# Button for reviewing a passage
user-verses-review-passage-button = { $passage_reference } bölümü tekrarla

# Button for practising a passage
user-verses-practise-passage-button = { $passage_reference } bölümü çalış

# Button for reviewing/practicing the whole of a catechsim
user-verses-review-or-practice-catechism = { $catechism_name } ilmihalinin tamamını çalış veya tekrarla

# Button for stopping learning a verse
user-verses-stop-learning-verse-button = Bu ayeti çalışma

# Confirmation prompt for stopping learning a verse
user-verses-stop-learning-verse-prompt = { $version_name } çevirisindeki { $reference } ayet çalışmasını durdurmak istediğinizden emin misiniz?

# Button for stopping learning a whole passage
user-verses-stop-learning-passage-button = Kısım çalışmasını durdur

# Confirmation prompt for stopping learning a passage
user-verses-stop-learning-passage-prompt = { $version_name } çevirisindeki { $passage_reference } kısım çalışmasını durdurmka istediğinizden emin misiniz?
